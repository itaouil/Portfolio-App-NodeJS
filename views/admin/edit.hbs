<h1>Add Project</h1>
<form method="post" action="/admin/edit/{{project.id}}" enctype="multipart/form-data">

    <div class="form-group">
        <label>Title</label>
        <input name="title" class="form-control" type="text" value={{project.title}}>
    </div>

    <div class="form-group">
        <label>Service</label>
        <input name="service" class="form-control" type="text" value={{project.service}}>
    </div>

    <div class="form-group">
        <label>Client</label>
        <input name="client" class="form-control" type="text" value={{project.client}}>
    </div>

    <div class="form-group">
        <label>Project Url</label>
        <input name="url" class="form-control" type="text" value={{project.url}}>
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea name="description" class="form-control" value={{project.description}}></textarea>
    </div>

    <div class="form-group">
        <label>Project Date</label>
        <input name="date" type="date" class="form-control">
    </div>

    <div class="form-group">
        <label>Image</label>
        <input name="image" type="file" class="form-control">
    </div>

    <button type="submit" class="button">Submit</button>

</form>
