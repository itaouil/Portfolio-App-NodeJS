{{#if projects}}
    {{#each projects}}
        <div class="column">
            <img class="thumbnail" src="/img/portfolio/{{image}}">
            <h5>{{title}}</h5>
            <p class="text-center show"><a href="/details/{{id}}">Show More</a></p>
        </div>
    {{/each}}
{{else}}
    <p>No Projects so far !</p>
{{/if}}